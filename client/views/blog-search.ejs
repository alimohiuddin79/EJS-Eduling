<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Result</title>
</head>
<body>

    <form action="/search/blogs" method="post">
        <input type="text" name="search">
        <button type="submit">Search</button>
    </form>
    <br>
    <br>

    <% if(requestedBlogs.length != 0){ %>
        <% requestedBlogs.forEach(function(blog){ %>
            <a href="/blogs/<%=blog._id%>">
                <div>
                    <img class="post-img-preview" src="data:image/<%=blog.titleImg.contentType%>;base64,<%=blog.titleImg.data.toString('base64')%>" alt="" width="300" height="500">
                    <h3><%=blog.title%></h3>
                </div>
            </a>  
        <% }) %>
    <% } else { %>
        <h3>No blogs found</h3>
    <% } %>

</body>
</html>