     /* ----------- CV Styling -----------*/
body {
    background: rgb(204, 204, 204);
}

page {
    background: white;
    display: block;
    margin: 0 auto;
    margin-bottom: 0.5cm;
    box-shadow: 0 0 0.5cm rgba(0, 0, 0, 0.5);
}

page[size="A4"] {
    width: 21cm;
    height: 29.7cm;
    }


@page {
margin: 0;
padding: 16px 28px;
}

@page {
size: portrait;
}  


@media print {
body {
    -webkit-print-color-adjust: exact;
    -moz-print-color-adjust: exact;
    -ms-print-color-adjust: exact;
    print-color-adjust: exact;
}
}
 /* ----------- CV Styling -----------*/
</style>
<div class="main-container">
    <page size="A4">
        <section>
            <div class="container-fluid">
                <!-- header-row -->
                <div class="row ">
                    <div class="col">
                        <h3 class="text-center" style="padding-top: 62px;"><%=name%></h3>

                    </div>
                    <div class="col">
                        <div style="padding-top: 28px;">
                            <p><%=email%></p>
                            <p><%=tel%></p>
                            <p><%=address%></p>
                        </div>
                    </div>
                </div>
                <hr class="rLine">
                <div class="row">
                    <div class="col">
                        <%-introduction%>
                    </div>
                </div>
                <hr class="rLine">
                <div class="row">
                    <div class="col">
                        <h3>Education</h3>
                        <%-education%>
                    </div>
                </div>
                <hr class="rLine">
                <div class="row">
                    <div class="col">
                        <h3>Skills</h3>
                        <%-skills%>
                    </div>
                </div>
                <hr class="rLine">
                <div class="row">
                    <div class="col">
                        <h3>Experience</h3>
                        <%-experiences%>
                    </div>
                </div>
                <hr class="rLine">
                <div class="row">
                    <div class="col">
                        <h3>Certifications</h3>
                        <%-certifications%>
                    </div>
                </div>
            </div>
        </section>
    </page>
    


    <button id="print-button" onclick="hideButton(this)">Print Your Resume</button>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
<script>
    function hideButton(x){
        x.style.display = "none";
        window.print();
        setTimeout(function() {
            x.style.display = "block";
        }, 10);
    }
</script>

