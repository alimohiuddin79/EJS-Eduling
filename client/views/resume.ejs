<%- include('partials/header') %>
<script src="https://cdn.tiny.cloud/1/gwnupy4nvlshpim31wh0p406bc1kewk7xqlegl2ph1lq1dup/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
<!-- Other css sheet link here -->
<title>Resume Builder</title>
</head>
<body>
    <%- include('partials/navbar') %>
    <style>
        textarea{
            resize: none;
        }
    </style>
    <div class="u-container">
        <h3 class="page-heading text-center mb-4">Enter Your Resume Details</h3>
    <form action="/resume" method="post">
        <div class="row mb-4">
            <div class="col col-lg-4 col-md-12 col-sm-12">
                <h3 class="page-content-heading">Personal Information</h3>
                <input class="form-control mb-4" type="text" name="user_name" placeholder="Enter your name">
                <input class="form-control mb-4" type="email" name="user_email" placeholder="Enter your email">
                <input class="form-control mb-4" type="tel" name="user_tel" placeholder="Enter your phone number">
                <input class="form-control" type="text" name="user_address" placeholder="Enter your address">
            </div>
            <div class="col col-lg-4 col-md-12 col-sm-12">
                <h3 class="page-content-heading">Education</h3>
                <textarea name="user_education" cols="60" rows="8" placeholder="Add your education and qualifications" minlength="200" maxlength="250"></textarea>
            </div>
            <div class="col col-lg-4 col-md-12 col-sm-12">
                <h3 class="page-content-heading">Skills</h3>
                <textarea name="user_skills" cols="60" rows="8" placeholder="Enter your skills" minlength="200" maxlength="250"></textarea>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col col-lg-4 col-md-12 col-sm-12">
                <h3 class="page-content-heading">Introduction</h3>
                <textarea name="user_introduction" cols="60" rows="8" placeholder="Introduce your self" minlength="200" maxlength="250"></textarea>
            </div>
            <div class="col col-lg-4 col-md-12 col-sm-12">
                <h3 class="page-content-heading">Experience</h3>
                <textarea name="user_experience" cols="60" rows="8" placeholder="Add your experiences" minlength="200" maxlength="250"></textarea>
            </div>
            <div class="col col-lg-4 col-md-12 col-sm-12">
                <h3 class="page-content-heading">Certifications</h3>
                <textarea name="user_certifications" cols="60" rows="8" placeholder="Enter your certifications (Optional)" minlength="200" maxlength="250"></textarea>
            </div>
        </div>
    <button class="btn btn-lg btn-edu-primary" type="submit">Submit details</button>
    </form>
    </div>
    
    <script>
        // tinymce text editor function
        tinymce.init({
        selector: 'textarea',
        height: 226,
        menubar: false,
        plugins: 'anchor autolink charmap codesample emoticons link lists searchreplace table visualblocks wordcount checklist casechange export formatpainter linkchecker a11ychecker tinymcespellchecker permanentpen powerpaste advtable advcode tinycomments tableofcontents footnotes autocorrect typography inlinecss',
        toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough spellcheckdialog a11ycheck typography | align lineheight | numlist bullist indent outdent | emoticons charmap | removeformat',
        tinycomments_mode: 'embedded',
        tinycomments_author: 'Author name',
        });
    </script>
